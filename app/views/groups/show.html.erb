<h1 class="page-title"><%= t('groups.students_of_group') %> <%= @group.name %></h1>
<h4 class="group-teacher mb-5">
  <% if @group.teacher %>
    <%= link_to @group.teacher.to_s, teacher_path(@group.teacher)  %>
    <% else %>
      <span class="text-muted"><%= t('shared.no_teacher') %></span>
    <% end %>
</h4>

<% if @students.count > 0 %>

<table class="table w-50 table-dark table-striped">
  <thead class="table-dark">
    <tr>
      <th scope="col"><%= t('shared.full_name') %></th>
      <th class="d-flex justify-content-center" scope="col"><%= t('shared.actions') %></th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td ><%= student.to_s %></td>
      <td class="d-flex gap-3 justify-content-center">
        <%= link_to t('shared.show'), student, class: "btn btn-primary" %>
        <%= link_to t('shared.edit'), edit_student_path(student), class: "btn btn-warning" %>
        <%= link_to t('shared.delete'), student, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </td>
  <% end %>
  </tbody>
</table>
<% else %>
  <p class="text-muted"><%= t('shared.no_students') %></p>
<% end %>
