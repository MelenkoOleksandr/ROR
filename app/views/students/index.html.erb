<h1 class="page-title"><%= t('students.students_title') %></h1>
<div><%= link_to t('students.create_student'), new_student_path, class: "btn btn-success mb-5" %></div>

<table class="table w-50 table-dark table-striped">
  <thead class="table-dark">
  <tr>
    <th scope="col"><%= t('shared.full_name') %></th>
    <th scope="col"><%= t('shared.group') %></th>
    <th class="d-flex justify-content-center" scope="col"><%= t('shared.actions') %></th>
  </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td ><%= student.to_s %></td>
      <td><%= student.group.name %></td>
      <td class="d-flex gap-3 justify-content-center">
        <%= link_to t('shared.show'), student, class: "btn btn-primary" %>
        <%= link_to t('shared.edit'), edit_student_path(student), class: "btn btn-warning" %>
        <%= button_to t('shared.delete'), student_path(student), method: 'delete', data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </td>
  <% end %>
  </tbody>
</table>


